<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cookandroid.charm_admin">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <permission android:name="android.permission.INTERNET" />
    <permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <permission android:name="android.permission.READ_PHONE_STATE" />
    <permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Main.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Main.MainActivity" android:label="MainActivity"/>
        <activity android:name=".User.LoginActivity" android:label="LoginActivity"/>
        <activity android:name=".User.JoinActivity" android:label="JoinActivity"/>
        <activity android:name=".CustomerManagement.ContactsListActivity" android:label="ContactListActivity"/>
        <activity android:name=".CustomerManagement.CustomerActivity" android:label="CustomerActivity"/>
        <activity android:name=".Notice.NoticeActivity" android:label="NoticeActivity"/>
        <activity android:name=".Notice.NoticeListActivity" android:label="NoticeListActivity"/>
        <activity android:name=".PriceList.PriceListActivity" android:label="PriceListActivity"/>
        <activity android:name=".ReservationList.ReservationViewActivity" android:label="ReservationViewActivity"/>
        <activity android:name=".ReservationList.ReservationListActivity" android:label="ReservationListActivity"/>
        <activity android:name=".Reservation.ReservationActivity" android:label="ReservationActivity"/>
        <activity android:name=".Reservation.ReservationTimeActivity" android:label="ReservationTimeActivity"/>
        <activity android:name=".Reservation.ReservationCheckActivity" android:label="ReservationCheckActivity"/>

    </application>

</manifest>