<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#efefef"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp">
        <ImageView
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/logo"/>

        <EditText
            android:id="@+id/login_edtId"
            android:layout_width="match_parent"
            android:layout_height="56pt"
            android:layout_marginBottom="6pt"
            android:background="@drawable/edit_text"
            android:textSize="20pt"
            android:hint="아이디 입력"/>

        <EditText
            android:id="@+id/login_edtPw"
            android:layout_width="match_parent"
            android:layout_height="56pt"
            android:layout_marginBottom="7pt"
            android:textSize="20pt"
            android:background="@drawable/edit_text"
            android:inputType="textPassword"
            android:hint="비밀번호 (4~16자리)"/>
        <!-- 자동로그인 체크박스 추가-->
        <CheckBox
            android:id="@+id/login_chkAutoLogin"
            android:layout_width="116pt"
            android:layout_height="44pt"
            android:layout_marginBottom="22pt"
            android:text="자동로그인"
            android:textSize="18pt"/>

        <Button
            android:id="@+id/login_btnLogin"
            android:layout_width="match_parent"
            android:layout_height="57pt"
            android:layout_marginBottom="6pt"
            android:text="로그인"
            android:textSize="24pt"
            android:background="#a259ff"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/login_btnJoin"
            android:layout_width="match_parent"
            android:layout_height="57pt"
            android:layout_marginBottom="6pt"
            android:text="회원가입"
            android:textSize="24pt"
            android:background="#ff7d9f"
            android:textColor="#ffffff"/>

        <!--    <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d1d1d1"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>-->
    </LinearLayout>
</LinearLayout>