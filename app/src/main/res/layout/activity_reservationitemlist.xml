<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20pt"
    android:layout_marginRight="19pt">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:background="#FF7D9F"
                android:layout_width="336pt"
                android:layout_height="30pt">

                <TextView
                    android:layout_marginTop="5pt"
                    android:layout_marginLeft="18pt"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:textColor="#FFFFFF"
                    android:textSize="18pt"
                    android:text="Cut/컷"/>
            </LinearLayout>
            <ListView
                android:id="@+id/reservation_list_cut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </ListView>
            <LinearLayout
                android:orientation="vertical"
                android:background="#FF7D9F"
                android:layout_width="336pt"
                android:layout_height="30pt"
                android:layout_marginTop="10pt">

                <TextView
                    android:layout_marginTop="5pt"
                    android:layout_marginLeft="18pt"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:textColor="#FFFFFF"
                    android:textSize="18pt"
                    android:text="Color/컬러염색"/>
            </LinearLayout>
            <ListView
                android:id="@+id/reservation_list_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </ListView>

            <LinearLayout
                android:orientation="vertical"
                android:background="#FF7D9F"
                android:layout_width="336pt"
                android:layout_height="30pt"
                android:layout_marginTop="10pt">

                <TextView
                    android:layout_marginTop="5pt"
                    android:layout_marginLeft="18pt"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:textColor="#FFFFFF"
                    android:textSize="18pt"
                    android:text="Perm/펌"/>
            </LinearLayout>
            <ListView
                android:id="@+id/reservation_list_perm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </ListView>

            <LinearLayout
                android:orientation="vertical"
                android:background="#FF7D9F"
                android:layout_width="336pt"
                android:layout_height="30pt"
                android:layout_marginTop="10pt">

                <TextView
                    android:layout_marginTop="5pt"
                    android:layout_marginLeft="18pt"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:textColor="#FFFFFF"
                    android:textSize="18pt"
                    android:text="Magic and Straight/매직 또는 스트레이트"
                    />
            </LinearLayout>

            <ListView
                android:id="@+id/reservation_list_magic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </ListView>

            <LinearLayout
                android:orientation="vertical"
                android:background="#FF7D9F"
                android:layout_width="336pt"
                android:layout_height="30pt"
                android:layout_marginTop="10pt">

                <TextView
                    android:layout_marginTop="5pt"
                    android:layout_marginLeft="18pt"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:textColor="#FFFFFF"
                    android:textSize="18pt"
                    android:text="Clinic/클리닉"
                    />
            </LinearLayout>
            <ListView
                android:id="@+id/reservation_list_clinic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </ListView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>